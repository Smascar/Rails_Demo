<style>
.jumbotron {
  background-color: #2bbfd9;
  color: #ffffff;
  font-size=7;
}
h1{
    font-size:10em;
    
}
p{
    font-size:2em;
}
th {
    background-color: black;
    color: white;
}
</style>

<div class="jumbotron text-center">
  <h1> Dear diary, </h1>
    
</div>

<div class="table-responsive">
  <table class="table text-nowrap table-hover">
    <tr>
      <th >Title</th>
      <th>Text</th>
      <th colspan=3 style="text-align:center;">Actions</th>
    </tr>
    <!-- FOR EACH ARTICLE IN DATABASE, MAKE NEW ROWS -->
    <% @articles.each do |article| %>
      <tr>
        <td>
          <% if article.title.length > 50 %>
            <%= truncate(article.title, length: 50) %>
          <% else %>
            <%= article.title %>
          <% end %>
        </td>
        <td>
          <% if article.text.length > 70 %>
            <%= truncate(article.text, length: 70) %>
          <% else %>
            <%= article.text %>
          <% end %>
        </td>
        <td style="text-align:center;"><%= link_to 'Display', article_path(article), class: "btn btn-outline-success" %></td>
        <td style="text-align:center;"><%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-warning" %> </td>
        <td style="text-align:center;"><%= link_to 'Delete', article_path(article), class: "btn btn-outline-danger", 
                method: :delete,
                data: {
                  confirm: 'Delete?'
                }%></td>
      </tr>
    <% end %>
  </table>
</div>
