<h1>New Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <!-- Error checking, incase we violated some rules during creation previously -->
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "step") %>
        away from publishing! 
      </h2>
      <ol>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %> <br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<%end%>

<p>
<%= link_to 'Article list', articles_path %><br>
<%= link_to 'Home', welcome_index_path %>
</p>
